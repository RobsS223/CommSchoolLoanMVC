<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - CommSchool Bank</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true"/>
    <!-- FontAwesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"/>
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/CommSchoolBankV2.styles.css" asp-append-version="true"/>

    <!-- Рендер секции стилей -->
    @RenderSection("Styles", required: false)

    <style>
        /* Общий стиль */
        body {
            margin: 0;
            padding: 0;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            background: linear-gradient(135deg, #74ebd5, #9face6);
            font-family: 'Roboto', sans-serif;
            color: #333;
        }

        .wrapper {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        /* Навигационная панель */
        .navbar-custom {
            background: linear-gradient(135deg, #667eea, #764ba2);
            text-align: center;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .navbar-custom .navbar-brand {
            font-size: 1.8rem;
            font-weight: bold;
            color: #fff;
            text-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        }

        .navbar-custom .navbar-brand:hover {
            color: #f8f9fa;
            text-decoration: none;
        }

        /* Основной контент */
        .content-wrapper {
            flex: 1;
            margin: 0 auto;
            width: 100%;
            max-width: 1140px;
            padding: 20px;
            background: rgba(255, 255, 255, 0.85);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
            border-radius: 15px;
            backdrop-filter: blur(10px);
        }

        main {
            padding-bottom: 30px;
        }

        /* Футер */
        .main-footer {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: #fff;
            padding: 10px 20px;
            text-align: center;
            font-size: 0.9rem;
            box-shadow: 0 -4px 8px rgba(0, 0, 0, 0.1);
        }

        .main-footer a {
            color: #f8f9fa;
            font-weight: bold;
            text-decoration: none;
        }

        .main-footer a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
<div class="wrapper">
    <!-- Header/Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom">
            <div class="container-fluid justify-content-center">
                <a class="navbar-brand" asp-area="" asp-controller="Auth" asp-action="Login">CommSchool Bank</a>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="content-wrapper">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="main-footer">
        <strong>&copy; 2024 <a href="#">CommSchool Bank</a>.</strong>
        All rights reserved.
    </footer>
</div>

<!-- Scripts -->
<script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
